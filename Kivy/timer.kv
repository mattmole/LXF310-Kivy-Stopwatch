#:kivy 1.0.9

<TimerWindow>:   
    timerLabel: timerLabel 
    stopButton: stopButton
    BoxLayout:
        spacing: 50
        padding: 50
        size: root.width, root.height
        #pos: self.parent.pos
        orientation: 'vertical'
        Label:
            id: timerLabel
            font_size: sp(0.25*self.width/pt(1))
            size: self.texture_size
        BoxLayout:
            spacing: 50
            padding: 50
            orientation: 'horizontal'
            Button:
                id: stopButton
                on_press: root.stopTimer()
                disabled: True
                size_hint_x: 0.5
                size_hint_y: 0.5
                pos_hint: {"center_x": 0.5, "center_y": 0.5}
                Image:
                    source: 'images/Stop.png'
                    y: self.parent.y
                    x: self.parent.x
                    size: self.parent.width, self.parent.height
                    allow_stretch: True
            Button:
                on_press: root.startTimer()
                size_hint_x: 0.5
                size_hint_y: 0.5
                pos_hint: {"center_x": 0.5, "center_y": 0.5}
                Image:
                    source: 'images/PlayPause.png'
                    y: self.parent.y
                    x: self.parent.x
                    size: self.parent.width, self.parent.height
                    allow_stretch: True